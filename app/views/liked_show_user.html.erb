<h1><%= @the_user.username%></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private%></dd>

  <dt>Followers</dt>
  <dd>
    <%= @the_user.followrequests_count%>

  </dd>

  <dt>Following</dt>
  <dd>9</dd>

</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username%>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username%>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username%>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username%>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Liked photos (<%= @the_user.photos_count%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

<%@the_user.likes.each do |the_likes|%>
  <tr>
    <td>
      <img src="<%=the_likes.photo.image%>">
    </td>

    <td>
      <%=the_likes.photo.owner.username%>
    </td>

    <td>
      <%=the_likes.photo.caption%>
    </td>

    <td>
       <%= time_ago_in_words(the_likes.photo.created_at) %> ago
    </td>

    <td>
      <%=the_likes.photo.likes_count%>
    </td>

    <td>
      <a href="/photos/<%=the_likes.photo.id%>">
        Show details
      </a>
    </td>
  </tr>
  <%end%>
</table>
